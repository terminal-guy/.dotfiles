!! Xterm Configuration
XTerm*renderFont: true
XTerm*faceName: xft:Mononoki Nerd Font, \
                xft:JoyPixels:size=12, \
                xft:Monospace:style=Medium:size=12   
XTerm*faceSize: 16
XTerm.termName: xterm-256color
XTerm*selectToClipboard: true
XTerm.vt100.locale: true
XTerm.vt100.metaSendsEscape: true
XTerm.vt100.saveLines: 3000
XTerm.vt100.translations: #override \n\
  Ctrl <Key> j: smaller-vt-font() \n\
  Ctrl <Key> k: larger-vt-font()
  Shift <Key>Insert:    insert-selection(SELECT) \n\
  Ctrl Shift <Key>V:    insert-selection(SELECT) \n\
  Ctrl Shift <Key>C:    copy-selection(SELECT)
  <Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
!! keyboard copy and insert for xterm 

!! Urxvt configuration

Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: true
Xft.hintstyle: hintfull
Xft.lcdfilter: lcdfilter


URxvt*termName: rxvt-unicode-256color
urxvt*scrollBar: false
urxvt*matcher.button: 1
URxvt*buffered: false
urxvt.transparent: true
URxvt*imLocale: en_IN.UTF-8
URxvt.intensityStyles: false
urxvt.boldFont:
URxvt*cursorUnderline: true
URxvt*geometry: 85x20
*internalBorder: 26
URxvt*fading: 0
URxvt*tintColor: #ffffff
URxvt.colorUL: #4682B4
URxvt*shading: 0
URxvt*inheritPixmap: False



! Fix font space

URxvt*letterSpace: -1
 
URxvt.scrollBar:	false
! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt.url-launcher: /usr/bin/xdg-open
!! extensions
urxvt.perl-ext-common: default,tabbed,matcher,resize-font,-tabbed,url-select,keyboard-select,clipboard,fullscreen

URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste

URxvt.keysym.C-k:  resize-font:smaller
URxvt.keysym.C-j:    resize-font:bigger

!!keysym
URxvt.urlLauncher: firefox
URxvt.keysym.F11: perl:fullscreen:switch


URxvt.font: xft:Mononoki Nerd Font:size=12, \
            xft:JoyPixels:size=12, \
            xft:Monospace:style=Medium:size=12  

