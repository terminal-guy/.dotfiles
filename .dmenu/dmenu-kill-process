#!/usr/bin/env bash
selected="$(ps -a -u $USER | \
            dmenu -c -l 20-i -p "ï…€ " \
            $lines $colors $font | \
            awk '{print $1" "$4}')"; 

if [[ ! -z $selected ]]; then

    answer="$(echo -e "Y\nN" | \
            dmenu -i -p "$selected will be killed, are you sure?" \
            )"

    if [[ $answer == "Y" ]]; then
        selpid="$(awk '{print $1}' <<< $selected)"; 
        kill -9 $selpid
    fi
fi

exit 0
